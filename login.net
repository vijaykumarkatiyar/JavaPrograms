    Private Sub lgnbtn_Click(sender As System.Object, e As System.EventArgs) Handles lgnbtn.Click
        Dim username As String
        Dim password As String
        Dim provider As String
        Dim dataFile As String
        Dim connString As String
        Dim userFound As Boolean
        Dim conn As New OleDb.OleDbConnection
        provider = "Provider=Microsoft.ACE.OLEDB.12.0;"
        dataFile = "Data Source=C:\Users\Amol\Desktop\login.accdb"
        connString = provider & dataFile
        conn.ConnectionString = connString
        conn.Open()
        Dim cmd As OleDbCommand = New OleDbCommand("SELECT * FROM login", conn)
        Dim dr As OleDbDataReader = cmd.ExecuteReader
        While dr.Read
            username = dr("username").ToString
            password = dr("password").ToString

            If (TextBox1.Text = username And TextBox2.Text = password) Then
                userFound = True
            End If
            Console.WriteLine(username)
            Console.WriteLine(password)

        End While
        If (userFound = True ) Then
            GroupBox2.Visible = False
        End If



    End Sub

